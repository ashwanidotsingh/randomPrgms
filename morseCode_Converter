
#include<bits/stdc++.h>
using namespace std; 
  
string morse_calculator(char s) { 
 
  switch (s) { 
  case 'a': 
    return ".-"; 
  case 'b': 
    return "-..."; 
  case 'c': 
    return "-.-."; 
  case 'd': 
    return "-.."; 
  case 'e': 
    return "."; 
  case 'f': 
    return "..-."; 
  case 'g': 
    return "--."; 
  case 'h': 
    return "...."; 
  case 'i': 
    return ".."; 
  case 'j': 
    return ".---"; 
  case 'k': 
    return "-.-"; 
  case 'l': 
    return ".-.."; 
  case 'm': 
    return "--"; 
  case 'n': 
    return "-."; 
  case 'o': 
    return "---"; 
  case 'p': 
    return ".--."; 
  case 'q': 
    return "--.-"; 
  case 'r': 
    return ".-."; 
  case 's': 
    return "..."; 
  case 't': 
    return "-"; 
  case 'u': 
    return "..-"; 
  case 'v': 
    return "...-"; 
  case 'w': 
    return ".--"; 
  case 'x': 
    return "-..-"; 
  case 'y': 
    return "-.--"; 
  case 'z': 
    return "--.."; 
  } 
} 
  
void morse_coder(string str) {  
  for (int i = 0; str[i]; i++) 
    cout << morse_calculator(str[i]); 
  cout << endl; 
} 
  
// Driver's code 
int main() { 

  string sl;
  cout<<"Please Enter the String"<<endl;
  cin>>sl; 
  transform(sl.begin(), sl.end(), sl.begin(), ::tolower); // STL to convert UPPER_CASE to lower_case.
  morse_coder(sl); 
  return 0; 
} 
